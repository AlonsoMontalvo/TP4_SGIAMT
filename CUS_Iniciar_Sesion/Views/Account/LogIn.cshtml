@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication


@model CUS_Iniciar_Sesion.Models.Auxiliar.login


<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Form Login and Register</title>
    <link rel="stylesheet" href="~/css/cssPerfil/estilos.css">
</head>
<body>
    <div class="cod-container">
        <div class="form-header">
            <img src="~/images/Logo.png" alt="Logo de CodigoMasters">
            <h1>SGIAMT <span> Academia</span></h1>
        </div>
        <div class="form-content">
            <form asp-action="LogIn">

                <div class="form-group">
                    <label asp-for="Dni"></label>
                    <input asp-for="Dni " name="Dni" id="Dni" placeholder="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contra"></label>
                    <input asp-for="Contra" name="Contra" id="Contra" placeholder="Password" class="form-control" />
                    <span asp-validation-for="Contra" class="text-danger"></span>
                </div>



                <input type="submit" class="btn btn-primary" id="btnusu" value="Iniciar Sesion" />
            </form>
        </div>
    </div>
    <script src="~/js/diseñologin/jquery-3.3.1.min.js"></script>
    <script src="~/js/diseñologin/form.js"></script>
</body>
</html>


