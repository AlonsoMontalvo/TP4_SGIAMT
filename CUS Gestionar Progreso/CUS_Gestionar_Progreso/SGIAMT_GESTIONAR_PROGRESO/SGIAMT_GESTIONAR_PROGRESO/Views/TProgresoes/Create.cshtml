        if (nota1 < 12) {
            alert("PRUEBAAA" + nota1);
        }

        alert("PRUEBAAA" + nota1);
        var nota2 = document.getElementById("DpNotaTecnica").value;
        var nota3 = document.getElementById("DpNotaInteres").value;
