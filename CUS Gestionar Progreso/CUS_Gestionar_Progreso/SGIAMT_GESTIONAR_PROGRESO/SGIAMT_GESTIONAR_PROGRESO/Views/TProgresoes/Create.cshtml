        promedio = (suma / 400);
        /*document.getElementById("preuba").innerHTML = "Resultado es: " + promedio + " %";
        document.getElementById("DpTotalNota").innerHTML = "Resultado es: " +  Number(promedio) + " %";
        document.getElementById("pruebaBoton").innerHTML = promedio;*/
        alert(promedio);
        document.getElementById("DpTotalNota").value = promedio;
    }
</script>

<h2>Registrar Progreso</h2>

<h4 style="color:darkblue" >Llenar los siguientes campos:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PkIpCod" class="control-label"></label>
                <input asp-for="PkIpCod" class="form-control" />
                <span asp-validation-for="PkIpCod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VpNombreProgreso" class="control-label"></label>
                <input asp-for="VpNombreProgreso" class="form-control" />
                <span asp-validation-for="VpNombreProgreso" class="text-danger"></span>
            </div>
            <label style="color:darkblue">Aspectos a evaluar:</label>
            <div class="form-group">
                <label asp-for="DpNotaPasos" class="control-label"></label>
                <input asp-for="DpNotaPasos" class="form-control" id="DpNotaPasos" name="DpNotaPasos" />
                <span asp-validation-for="DpNotaPasos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DpNotaTecnica" class="control-label"></label>
                <input asp-for="DpNotaTecnica" class="form-control" id="DpNotaTecnica" name="DpNotaTecnica" />
                <span asp-validation-for="DpNotaTecnica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DpNotaInteres" class="control-label"></label>
                <input asp-for="DpNotaInteres" class="form-control" id="DpNotaInteres" name="DpNotaInteres" />
                <span asp-validation-for="DpNotaInteres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DpNotaHabilidad" class="control-label"></label>
                <input asp-for="DpNotaHabilidad" class="form-control" id="DpNotaHabilidad" name="DpNotaHabilidad" />
                <span asp-validation-for="DpNotaHabilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DpTotalNota" class="control-label"></label>
                <label asp-for="DpTotalNota" id="preuba" class="control-label" name="preuba"></label>
                <input asp-for="DpTotalNota" id="DpTotalNota" class="form-control" type="number" />
                @*<span asp-validation-for="DpTotalNota" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Hallar promedio" class="btn btn-success" onclick="prueba()" />
            </div>
            <div class="form-group">
                <label asp-for="VpObservacion" class="control-label"></label>
                <textarea asp-for="VpObservacion" class="form-control" type="text"></textarea>
                <span asp-validation-for="VpObservacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-default">Regresar</a>
</div>

<script>
