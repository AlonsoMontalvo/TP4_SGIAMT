@model SGIAMT_GESTIONAR_PROGRESO.Models.TProgreso

@{
    ViewData["Title"] = "Create";
}

<head>
    <title>Gestionar Progreso</title>
    <link rel="stylesheet" href="~/css/RegistroStyle.css" />
</head>
<script>

    function prueba() {
        var categoria = Number(document.getElementById("DpNotaPasos").value);
        var categoria1 = Number(document.getElementById("DpNotaTecnica").value);
