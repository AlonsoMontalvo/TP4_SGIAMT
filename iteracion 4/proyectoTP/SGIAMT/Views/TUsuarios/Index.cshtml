@model IEnumerable<SGIAMT.Models.TUsuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPerfil/_LayoutRecepcionista.cshtml";
}

<head>
    <link href="~/css/RegistroStyle.css" rel="stylesheet" />
</head>
<style type="text/css">
    .boton_activar {
        text-decoration: none;
        font-weight: 600;
        font-size: 20px;
        color: #ffffff;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 15px;
        padding-right: 15px;
        background-color: lawngreen;
        border-color: lawngreen;
        border-width: 0px;
        border-style: solid;
    }

    .i {
        color: white;
        text-decoration: none;
    }

    .boton_desactivar {
        text-decoration: none;
        font-weight: 600;
        font-size: 20px;
        color: #ffffff;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: #f2595e;
        border-color: #f2595e;
        border-width: 0px;
        border-style: solid;
    }
</style>
<style type="text/css">
    .table th, .table td {
        text-align: center;
    }

    .btn-inline {
        margin-top: 20px;
    }

    .ui-jqgrid-view {
        background-color: white;
        /*height: 315px;
        width: 1050px;
        background-color: white;*/
    }

    /*cuerpo*/
    .ui-jqgrid .ui-jqgrid-btable tbody tr.jqgrow td {
        overflow: hidden;
        /*white-space: normal;
        padding-right: 2px;
        cursor: pointer;
        height:auto;
    overflow:hidden;*/
        cursor: pointer;
        height: auto;
        padding-right: 4px;
        padding-top: 2px;
        position: relative;
        vertical-align: text-top;
        white-space: normal !important;
    }

    .ui-jqgrid-bdiv {
        height: auto !important;
    }
    /*cabecera*/
    table.ui-jqgrid-htable thead th {
        height: 40px;
        padding: 0 2px 0 2px;
        background: #d3dfec;
        color: black;
        font-size: 14px;
        font-weight: 700;
        text-align: center;
        font-style: initial;
    }

    .table-responsives {
        overflow-x: hidden !important;
        overflow-y: hidden !important;
    }

    .table tbody td {
        padding: 1px 7px 1px 7px !important;
        height: 30px;
        font-size: 13px;
        vertical-align: inherit;
    }

    table.ui-pager-table tbody td {
        padding: 4px 7px 4px 7px !important;
        background: #d3dfec;
    }

    #table-listar-usuario-activo tr td {
        vertical-align: middle;
        text-align: center;
        width: 100%;
        height: 50px;
        border-bottom: 1px solid #ddd;
        background-color: snow;
        color: black;
    }
     #table-listar-usuario-inactivo tr td {
        vertical-align: middle;
        text-align: center;
        width: 100%;
        height: 50px;
        border-bottom: 1px solid #ddd;
        background-color: snow;
        color: black;
    }

    .ui-jqgrid tr.jqgrow td {
        white-space: nowrap !important;
        width: 100%;
        height: 50px;
    }
</style>
<style type="text/css">
    .table th, .table td {
        text-align: center;
        background-color: snow;
    }
</style>
<body>
    <div role="tabpanel" class="tab-pane" align="center">
        <div class="row">
            <h2 style="color:white"><font face="tahoma">Gestionar Perfiles Alumnos</font></h2>
            <div class="col-lg-12">

                <br />
                <br />
                <h4 style="color:white">Tipo Usuario : &nbsp; @ViewData["tipousuario"] &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; correo :  &nbsp; @ViewData["correo"] &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  nombre :&nbsp;&nbsp; @ViewData["nombre"] &nbsp;&nbsp; @ViewData["paterno"]&nbsp;&nbsp; @ViewData["materno"]</h4>
                <br />
                <div class="card">
                    <ul class="nav nav-tabs" role="tablist" style="color:black">
                        <li class="active" style="color:white" role="presentation"><a href="#cuentas" aria-controls="cuentas" role="tab" data-toggle="tab" style="color:black">Alumnos</a></li>
                        <li class="i" role="presentation"><a href="#first" aria-controls="first" role="tab" data-toggle="tab" style="color:black">Alumno Inactivos</a></li>
                        <li class="i" role="presentation"><a href="#second" aria-controls="second" role="tab" data-toggle="tab" style="color:black">Alumno Activos</a></li>
                    </ul>
                    <br />
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="cuentas">
                            <div class="container">
                                <div class="row ">
                                    <form action="/TUsuarios/Select" method="post">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <h2 style="color:white; margin: 50px 600px 0px 0px"><font face="tahoma">Listado de Alumnos</font></h2>
                                                <div class="card" style="margin: 50px 50px 0px 50px">
                                                    <div class="card-body">
                                                        <table class="table table-bordered table-striped table-sm" id="tabla" border="0">
                                                            <thead>
                                                                <tr>
                                                                    <th style="background-color: #D3DFEC">
                                                                        DNI
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Nombre
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Apellido Paterno
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Apellido Materno
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Celular
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Correo
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Sexo
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Estado de Cuenta
                                                                    </th>
                                                                    <th style="background-color: #D3DFEC">
                                                                        Opciones
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in Model)
                                                                {
                                                                    <tr>
                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.PkIuDni)
                                                                        </td>
                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.VuNombre)
                                                                        </td>
                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.VuApaterno)
                                                                        </td>
                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.VuAmaterno)
                                                                        </td>
                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.VuCelular)
                                                                        </td>
                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.VuCorreo)
                                                                        </td>

                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.VuSexo)
                                                                        </td>

                                                                        <td style="vertical-align:middle;">
                                                                            @Html.DisplayFor(modelItem => item.VuEstado)
                                                                        </td>


                                                                        <td>
                                                                            @if (item.VuEstado == "Activo")
                                                                            {
                                                                                <div>
                                                                                    <a class="boton_activar" asp-controller="TUsuarios" asp-action="Activo" hidden asp-route-id="@item.PkIuDni"> Activar</a>
                                                                                </div>
                                                                                <div class="col-lg-2 register-left" style="width : 65% ; float :left">
                                                                                    <a class="btn btn-primary btn-danger" asp-controller="TUsuarios" asp-action="Inactivo" asp-route-id="@item.PkIuDni"><span class="glyphicon glyphicon-remove"></span> Desactivar</a>

                                                                                </div>
                                                                            }
                                                                            @if (item.VuEstado == "Inactivo")
                                                                            {
                                                                                <div class="col-lg-8 register-left" style="width : 65% ; float :left">
                                                                                    <a class="btn btn-primary btn-success" asp-controller="TUsuarios" asp-action="Activo" asp-route-id="@item.PkIuDni"><span class="glyphicon glyphicon-ok"></span> Activar</a>
                                                                                </div>
                                                                                <div>
                                                                                    <a class="boton_desactivar" asp-controller="TUsuarios" asp-action="Inactivo" hidden asp-route-id="@item.PkIuDni"> Desactivar</a>

                                                                                </div>
                                                                            }

                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane" id="first">
                            <h2 style="color:white; margin: 50px 600px 0px 0px"><font face="tahoma">Lista de Alumnos Inactivos</font></h2>
                            <div class="container">
                                <div class="row ">
                                    <div class="col-10" style="width : 20% ; margin: 0px 700px 0px 0px">
                                        <div class="form-group">
                                            <br />
                                            <label style="color:white" for="name"> DNI</label>
                                            <input class="form-control" id="ddninac">

                                        </div>
                                    </div>

                                    <div class="col-10" style="width : 20% ; margin: 15px 0px 50px 65px">
                                        <button onclick="getlistusuariosinactivo(true)" , class="btn btn-success" style="margin: 0px 0px 0px 0px"><span class="glyphicon glyphicon-search"></span> Buscar Alumno</button>

                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body" align="center">
                                            <table id="table-listar-usuario-inactivo"></table>
                                            <div id="pager-listar-usuario-inactivo"></div>
                                        </div>
                                    </div>
                                </div>
                                <!--/.col-->
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="second">
                            <h2 style="color:white; margin: 50px 600px 0px 0px"><font face="tahoma">Lista de Alumnos Activos</font></h2>
                            <div class="container">
                                <div class="row ">
                                    <div class="col-10" style="width : 20% ; margin: 0px 700px 0px 0px">
                                        <div class="form-group">
                                            <br />
                                            <label style="color:white" for="name"> DNI</label>
                                            <input class="form-control" id="ddninac">

                                        </div>
                                    </div>
                                    <div class="col-10" style="width : 20% ; margin: 15px 0px 50px 65px">
                                        <button onclick="getlistusuariosactivo(true)" , class="btn btn-success" style="margin: 0px 0px 0px 0px"><span class="glyphicon glyphicon-search"></span> Buscar Alumno</button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body" align="center">
                                            <table id="table-listar-usuario-activo"></table>
                                            <div id="pager-listar-usuario-activo"></div>
                                        </div>
                                    </div>
                                </div>
                                <!--/.col-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



@section Scripts{
    <script src="~/js/gestionar_usuario/ejemplo.js"></script>
}
