@model IEnumerable<SGIAMT.Controllers.Detalleasistenciaview>
@{
    ViewData["Title"] = "Alumno";
    Layout = "~/Views/Shared/_LayoutPerfil/_LayoutAlumno.cshtml";
}

    <head>
        <link href="~/css/RegistroStyle.css" rel="stylesheet" />
       
            <title>REPORTE DE ASISTENCIA DEL ALUMNO</title>
        
    </head>

<style type="text/css">
    .table th, .table td {
        text-align: center;
        background-color: snow;
    }
</style>

<body>
  <img src="~/images/titulo.png" />

        <div class="container" style="padding:-150px">

            <form asp-action="Imprimirdocument" class="cod-form">

                <div class="card">
                  
                
                          <div class="card-body">
                              <img src="~/images/titulo.png" />
                              <br /><br />
                              <table class="table table-bordered table-striped table-sm" id="tabla">
                                 
                                  <thead>
                                      <tr>
                                          <th style="background-color: #D3DFEC">
                                              Dni
                                          </th>

                                          <th style="background-color: #D3DFEC">
                                              Nombre
                                          </th>
                                          <th style="background-color: #D3DFEC">
                                              Apellido paterno
                                          </th>
                                          <th style="background-color: #D3DFEC">
                                              Apellido materno
                                          </th>

                                      </tr>
                                  </thead>
                                  <tbody>
                                      @foreach (var item in Model)
                                      {
                                          <tr>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.FkIuDni)
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.nombre)
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.apellidopa)
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.apellidoma)
                                              </td>

                                          </tr>
                                      }
                                  </tbody>
                              </table>

                              <table class="table table-bordered table-striped table-sm" id="tabla">
                                  <thead>
                                      <tr>
                                          <th style="background-color: #D3DFEC">
                                              hora
                                          </th>

                                          <th style="background-color: #D3DFEC">
                                              semana
                                          </th>
                                          <th style="background-color: #D3DFEC">
                                              dia
                                          </th>
                                          <th style="background-color: #D3DFEC">
                                              estado asistencia
                                          </th>

                                      </tr>
                                  </thead>
                                  <tbody>
                                      @foreach (var item in Model)
                                      {
                                          <tr>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.hora)
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.semana)
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.dia)
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.VaEstadoAsistencia)
                                              </td>

                                          </tr>
                                      }
                                  </tbody>
                              </table>

                              <table class="table table-bordered table-striped table-sm" id="tabla">
                                  <thead>
                                      <tr>
                                          <th style="background-color: #D3DFEC">
                                              nivel
                                          </th>

                                          <th style="background-color: #D3DFEC">
                                              Tipo de nivel
                                          </th>


                                      </tr>
                                  </thead>
                                  <tbody>
                                      @foreach (var item in Model)
                                      {
                                          <tr>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.nivel)
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.Tiponivel)
                                              </td>

                                          </tr>
                                      }
                                  </tbody>
                              </table>
                          </div>
                    <div class="form-group">
                        <a asp-controller="Alumnohome" asp-action="ReporteAsistencia" class="btn btn-primary active" role="button">atras</a>

                    </div>
                </div>

            </form>

        </div>
        @*</div>*@
        <!--/.col-->

</body>
